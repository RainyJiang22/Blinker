<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0C11">

    <com.blinker.video.ui.widget.FakeStatusView
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toTopOf="parent" />




    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@+id/start">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:padding="12dp"
            android:src="@drawable/tailor_ic_return" />


        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:includeFontPadding="false"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:text="保存"
            android:textColor="@android:color/white"
            android:textSize="14dp" />
    </RelativeLayout>

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="50dp"
        app:layout_constraintBottom_toTopOf="@+id/cutout_ctrl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_title"
        app:surface_type="surface_view"
        app:use_controller="false" />

    <ImageView
        android:id="@+id/iv_play_pause"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="54dp"
        android:background="@drawable/tailor_play_bt_bg"
        android:scaleType="center"
        android:src="@drawable/tailor_ic_video_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.blinker.video.ui.pages.publish.VideoCutoutCtrlView
        android:id="@+id/cutout_ctrl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-6dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_play_pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_play_pause"
        app:layout_constraintTop_toTopOf="@+id/iv_play_pause" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:includeFontPadding="false"
        android:paddingHorizontal="8dp"
        android:paddingVertical="1.5dp"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/cutout_ctrl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/loading"
        android:layout_width="150dp"
        android:layout_height="@dimen/dp_10"
        android:layout_gravity="center"
        android:indeterminate="true"
        app:indicatorColor="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackCornerRadius="@dimen/dp_10" />
</androidx.constraintlayout.widget.ConstraintLayout>